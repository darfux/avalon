<div id="article-area">
  <div id="article-title">
    <%= @article.title %>
  </div>
  <div id="article-time">
    <%= l @article.created_at %>
    <div id="article-function">
      <%= link_to edit_article_path(@article) do %>
        <%= fa_icon "pencil", id: 'article-edit'%>
      <% end %>
    </div>
  </div>
  <div id="article-content">
    <%= simple_format @article.content %>
  </div>
</div>

